<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFTAppV9.KissPage">
    <ContentPage.Content>
        <Grid RowDefinitions="6" ColumnDefinitions="2" BackgroundColor="White">
            <Label Text="Kiss"               
                   HorizontalOptions="Center"
                   FontSize="40"
                   TextColor="Black"/>

            <Button x:Name="KissTest"
                    Text="Kiss Here"
                    FontSize="Large"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    WidthRequest="350"
                    HeightRequest="270"
                    Margin="15"
                    Pressed="KissTest_Pressed"
                    Released="KissTest_Released"
                    Grid.ColumnSpan="3"
                    Grid.RowSpan="4"></Button>



